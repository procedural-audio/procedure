{
    // Hide various UI elements
    "workbench.sideBar.location": "left",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.showTabs": "none",
    "workbench.statusBar.visible": false,
    "editor.minimap.autohide": true,
    "breadcrumbs.enabled": false,

    // Notification settings
    "extensions.ignoreRecommendations": true,
    "workbench.remoteIndicator.showExtensionRecommendations": false,
    
    // Git settings
    "git.autofetch": false,

    // Other useful changes
    "notebook.defaultFormatter": "CmajorSoftware.cmajor-tools",
    "editor.scrollbar.vertical": "hidden",

    // Associate modules files with cmajor
    "files.associations": {
        "*.module": "cmajor"
    },
    
    // The the configuration from the editor
    "files.exclude": {
        // "**/.vscode/": true
    },

    // Open all markdown files in the preview
    "workbench.editorAssociations": {   
        "*.md": "vscode.markdown.preview.editor",
    },


    // Not sure if these are necessary
    "window.commandCenter": false,
    "editor.suggest.showStatusBar": false,
    "outline.icons": true,
    "debug.enableStatusBarColor": true,

    // Actions to do on save
    "editor.codeActionsOnSave": {

    },
    "workbench.editor.enablePreviewFromCodeNavigation": false,

    // Not using these features

    // "editor.minimap.enabled": false,
    // "editor.scrollbar.horizontal": "hidden",
    // "explorer.autoReveal": false,
    // "zenMode.showTabs": "none",
    // "zenMode.fullScreen": false,
    // "zenMode.centerLayout": false,
}